<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/UI.xsd">
  <Frame name="RaidFrameSettings_ColorModeTemplate" virtual="true">
    <Size y="42"/>
    <Layers>
      <Layer level="ARTWORK">
        <FontString parentKey="settings_text" inherits="GameFontNormalLeft" justifyH="LEFT">
          <Anchors>
            <Anchor point="LEFT" x="15" y="0"/>
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
    <Frames>
      <DropdownButton parentKey="dropdown" inherits="WowStyle1DropdownTemplate">
        <Anchors>
          <Anchor point="LEFT" x="200" y="0"/>
        </Anchors>
      </DropdownButton>
      <Button parentKey="color_picker_static_color" inherits="RaidFrameSettings_ColorPickerTemplate">
        <Anchors>
          <Anchor point="LEFT" relativeKey="$parent.dropdown" relativePoint="RIGHT" x="0" y="0"/>
        </Anchors>
      </Button>
      <Button parentKey="color_picker_gradient_start" inherits="RaidFrameSettings_ColorPickerTemplate">
        <Anchors>
          <Anchor point="LEFT" relativeKey="$parent.dropdown" relativePoint="RIGHT" x="0" y="0"/>
        </Anchors>
      </Button>
      <Button parentKey="color_picker_gradient_end" inherits="RaidFrameSettings_ColorPickerTemplate">
        <Anchors>
          <Anchor point="LEFT" relativeKey="$parent.color_picker_gradient_start.text" relativePoint="RIGHT" x="10" y="0"/>
        </Anchors>
      </Button>
		</Frames>
  </Frame>
</Ui>
