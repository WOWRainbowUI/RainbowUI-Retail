			<Anchor point="TOPLEFT" x="10" y="-3"/>
			<Anchor point="BOTTOMRIGHT" x="-18" y="3"/>
		</Anchors>
		<Frames>
			<Slider parentKey="scrollBar">	
				<Size x="4"/>
				<HitRectInsets left="-5" right="-4" />
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPRIGHT" x="5" y="-27"/>
					<Anchor point="BOTTOMLEFT" relativePoint="BOTTOMRIGHT" x="5" y="0"/>
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture name="$parentTrack" parentKey="trackBG">
							<Anchors>
								<Anchor point="TOPLEFT" x="0" y="0"/>
								<Anchor point="BOTTOMRIGHT" x="0" y="0"/>
							</Anchors>
							<Color r="0" g="0" b="0" a="1"/>
						</Texture>
					</Layer>
				</Layers>
				<ThumbTexture name="$parentThumbTexture" inherits="HybridScrollBarButton" file="Interface\Buttons\UI-ScrollBar-Knob" parentKey="thumbTexture">
					<Size x="18" y="24"/>
					<TexCoords left="0.20" right="0.80" top="0.125" bottom="0.875"/>
				</ThumbTexture>
				<Scripts>
					<OnValueChanged>
						local parent = self:GetParent();
						parent.offset = value;
						self:GetParent().Text:SetPoint("TOPLEFT", 0, parent.offset);
					</OnValueChanged>
					<OnMouseWheel>
						local parent = self:GetParent();
						local change = delta*30;
						parent.offset = parent.offset - change;
						parent.offset = max(0, parent.offset);
						parent.offset = min(parent.offset, parent.limit);
						
						parent.scrollBar:SetValue(parent.offset);
					</OnMouseWheel>
				</Scripts>
			</Slider>
		</Frames>
		<ScrollChild>
			<SimpleHTML parentKey="Text">
				<Size x="250" y="400" />
				<FontString inherits="GameFontNormal" spacing="2" wordwrap="true"/>
				<FontStringHeader1 inherits="Fancy24Font" spacing="5"/>
				<FontStringHeader2 inherits="Fancy16Font" spacing="4"/>
				<FontStringHeader3 inherits="GameFontNormalTiny" spacing="0"/>
			</SimpleHTML>
		</ScrollChild>
		<Scripts>
			<OnLoad>
				self.offset = 0;
				self.limit = max(0, self.Text:GetHeight() - self:GetHeight());
				self.scrollBar.doNotHide = true;
				self.scrollBar:SetMinMaxValues(0, self.limit)
				self.scrollBar:SetValue(0);
			</OnLoad>
			<OnMouseWheel>
				local change = delta*30;
				self.offset = self.offset - change;
				self.offset = max(0, self.offset);
				self.offset = min(self.offset, self.limit);
				
				self.scrollBar:SetValue(self.offset);
			</OnMouseWheel>
		</Scripts>
	</ScrollFrame>
	
	
